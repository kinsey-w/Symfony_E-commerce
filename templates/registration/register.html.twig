{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'register.heading'|trans }}</h1>

{{ form_start(registrationForm) }}
    {{ form_row(registrationForm.nom, { 'label': 'register.label.nom'|trans }) }}
    {{ form_row(registrationForm.prenom, { 'label': 'register.label.prenom'|trans }) }}
    {{ form_row(registrationForm.email, { 'label': 'register.label.email'|trans }) }}
    {{ form_row(registrationForm.plainPassword, { 'label': 'register.label.password'|trans }) }}
    <button type="submit" class="btn btn-primary">{{ 'register.button.submit'|trans }}</button>
{{ form_end(registrationForm) }}

<p>
    {{ 'register.existing_account'|trans }} <a href="{{ path('app_login') }}">{{ 'register.link.login'|trans }}</a>.
</p>

{% endblock %}

